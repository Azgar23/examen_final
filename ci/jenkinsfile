pipeline {
    agent any
    stages {
        stage('Newman Tests') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh '''
                    cd api/newman
                    newman run examen_postman.postman_collection.json -e examen_environment.postman_environment.json               
                    cd../ ../
                    '''
                }
            }
        }
        stage('RestAssured Tests') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh '''
                        cd api/restassured
                        mvn clean test
                        cd../ ../
                        '''
                }
            }              
        }
        stage('Jmeter Tests') {
            steps {
                sh '''
                cd load
                jmeter -n -t Examen_Final.jmx
                '''
            }
        }
    }
}